{
    "title": "Azure Dashboard YAML Schema",
    "description": "Schematic for developing Azure Dashboards in YAML",
    "type": "object",
    "additionalProperties": false,
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "queries": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "query": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "query"
                ]
            }
        }
    },
    "required": [
        "queries"
    ]
}