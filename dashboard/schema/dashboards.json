{
    "title": "Azure Dashboard YAML Schema",
    "description": "Schematic for developing Azure Dashboards in YAML",
    "type": "object",
    "additionalProperties": false,
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Content": {
            "oneOf": [
                {
                    "$ref": "#/definitions/MetricContent"
                },
                {
                    "$ref": "#/definitions/MarkdownContent"
                },
                {
                    "$ref": "#/definitions/QueryContent"
                }
            ]
        },
        "QueryContent":{
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "query"
                    ]
                },
                "query": {
                    "type": "string"
                }
            }
        },
        "MarkdownContent": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "markdown"
                    ]
                },
                "markdown": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "markdown"
            ]
        },
        "MetricContent": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "metrics"
                    ]
                },
                "resource": {
                    "type": "string"
                },
                "namespace": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "aggregation": {
                    "type": "string"
                }
            },
            "required": [
                "type", "resource", "namespace", "name", "aggregation"
            ]
        }
    },
    "properties": {
        "name": {
            "type": "string"
        },
        "tiles": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "subtitle": {
                        "type": "string"
                    },
                    "x": {
                        "type": "number"
                    },
                    "y": {
                        "type": "number"
                    },
                    "columnsWidth": {
                        "type": "number"
                    },
                    "rowsHeight": {
                        "type": "number"
                    },
                    "content": {
                        "$ref": "#/definitions/Content"
                    }
                },
                "required": [
                    "x",
                    "y",
                    "columnsWidth",
                    "rowsHeight",
                    "content"
                ]
            }
        }
    },
    "required": [
        "name",
        "tiles"
    ]
}