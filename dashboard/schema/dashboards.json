{
    "title": "Azure Dashboard YAML Schema",
    "description": "Schematic for developing Azure Dashboards in YAML",
    "type": "object",
    "additionalProperties": false,
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "TileGroup": {
            "type": "object",
            "properties": {
                "groupName": {
                    "type": "string"
                },
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                },
                "variables": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "value": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "name",
                            "value"
                        ]
                    }
                }
            },
            "required": [
                "groupName",
                "x",
                "y",
                "variables"
            ]
        },
        "Tile": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "subtitle": {
                    "type": "string"
                },
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                },
                "columnsWidth": {
                    "type": "number"
                },
                "rowsHeight": {
                    "type": "number"
                },
                "content": {
                    "$ref": "#/definitions/Content"
                }
            },
            "required": [
                "x",
                "y",
                "columnsWidth",
                "rowsHeight",
                "content"
            ]
        },
        "Content": {
            "oneOf": [
                {
                    "$ref": "#/definitions/MetricContent"
                },
                {
                    "$ref": "#/definitions/MarkdownContent"
                },
                {
                    "$ref": "#/definitions/QueryContent"
                }
            ]
        },
        "QueryContent": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "query"
                    ]
                },
                "resourceId": {
                    "type": "string"
                },
                "queryType": {
                    "type": "string",
                    "enum": [
                        "inline",
                        "shared"
                    ]
                },
                "query": {
                    "type": "string"
                },
                "variables": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "value": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "name",
                            "value"
                        ]
                    }
                }
            },
            "required": [
                "type",
                "resourceId",
                "queryType",
                "query"
            ]
        },
        "MarkdownContent": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "markdown"
                    ]
                },
                "markdown": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "markdown"
            ]
        },
        "MetricContent": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "metrics"
                    ]
                },
                "resource": {
                    "type": "string"
                },
                "namespace": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "aggregation": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "resource",
                "namespace",
                "name",
                "aggregation"
            ]
        }
    },
    "properties": {
        "name": {
            "type": "string"
        },
        "tiles": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "#/definitions/Tile"
                    },
                    {
                        "$ref": "#/definitions/TileGroup"
                    }
                ]
            }
        }
    },
    "required": [
        "name",
        "tiles"
    ]
}